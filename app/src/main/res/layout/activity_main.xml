<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#cbc1bf">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivStatus"
        android:layout_centerHorizontal="true"
        android:src="@drawable/searching"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/TVResult"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_above="@+id/ivBtnUnpressed"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textColor="#a00"
        android:id="@+id/tvHintReady"
        android:textStyle="bold"
        android:textSize="46sp"
        android:layout_above="@+id/ivBtnUnpressed"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:textColor="#0A0"
        android:id="@+id/tvHintGo"
        android:textStyle="bold"
        android:textSize="46sp"
        android:layout_above="@+id/ivBtnUnpressed"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBtnUnpressed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_unpressed" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBtnPressed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_pressed"
        android:visibility="invisible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Double tap\n to start"
        android:id="@+id/tvStart"
        android:height="58dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_below="@+id/ivBtnUnpressed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:visibility="invisible"/>

</RelativeLayout>
